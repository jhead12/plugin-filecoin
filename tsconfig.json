{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "../../",
    "lib": ["ES2021", "DOM"],
    "target": "ES2022",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "allowJs": false,
    "checkJs": false,
    "noEmitOnError": true,
    "moduleDetection": "auto",
    "baseUrl": ".",
    "paths": {
      "@elizaos/core": ["../core/src"],
      "@elizaos/core/*": ["../core/src/*"],
      "@elizaos/plugin-filecoin": ["filecoin-rs/filecoin-core/src"],
      "/wasm/*": ["public/wasm/*"]
    }
  },
  "include": ["filecoin-rs/filecoin-core/src"]
}